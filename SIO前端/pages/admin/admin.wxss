/* pages/admin/admin.wxss */
.container { 
  height: 100%; 
  display: flex; 
  flex-direction: column; 
  padding: 0; 
  box-sizing: border-box; 
 } 
 .title{
   width: 100%;
   height: 80rpx;
   font-size: xx-large;
   margin-top: 20rpx;
   margin-bottom: 10rpx;
   border: aqua;
   text-align: center;
  background-color: #f2f2f2;
 }
 .line{
   width: 100%;
   height: 3rpx;
   background-color:#dddbdb ;
 }
 .search{
   margin: 20rpx;
   background-color: #f2f2f2;
   width: 100%;
 }
 .searchbox{
   display: flex;
   flex-direction: row;
 }
 .searchLab{
   width: 15%;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  color: #545454; 
  font-size: 14px
 }
 .inputText { 
  flex: block; 
  text-align: left; 
  margin-right: 22px; 
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  color: #cccccc; 
  font-size: 14px;
  width:50%
 } 
 .dateinputText { 
  flex: block; 
  text-align: left; 
  margin-right: 10px; 
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  color: #cccccc; 
  font-size: 14px;
  width:10%
 } 
 .bt_box{
   margin-top: 10rpx;
   width: 20%;
 }
 .bt{
  background-color: rgb(69, 188, 218);
  color: white;
  border-radius: 98rpx; 
 }
 .infobox{
   margin: 20rpx;
   width: 100%;
 }
 .infoitem{
   background-color:#f2f2f2 ;
   width:100% ;
 }
 .box{
   margin-left: 20rpx;
 }
 .menu{
   
   width: 100%;
   height: 8%;
   display: flex;
   flex: row;
   background-color: #ffffff;
 }
 .menuitem{
   width: 40%;
   margin-right: 5%;
   margin-left: 5%;
   height: 7%;
